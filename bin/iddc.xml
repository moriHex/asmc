<?xml version="1.0" encoding="utf-8"?>
<ProjectSchemaDefinitions xmlns="http://schemas.microsoft.com/build/2009/properties" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:sys="clr-namespace:System;assembly=mscorlib">
  <Rule
    Name="IDDC"
    PageTemplate="tool"
    DisplayName="Asmc Binary Resource Compiler"
    Order="200">
    <Rule.DataSource>
      <DataSource
        Persistence="ProjectFile"
        ItemType="IDDC" />
    </Rule.DataSource>
    <Rule.Categories>
      <Category
        Name="General">
        <Category.DisplayName>
          <sys:String>General</sys:String>
        </Category.DisplayName>
      </Category>
      <Category
        Name="Command Line"
        Subtype="CommandLine">
        <Category.DisplayName>
          <sys:String>Command Line</sys:String>
        </Category.DisplayName>
      </Category>
    </Rule.Categories>
    <StringProperty
      Name="Inputs"
      Category="Command Line"
      IsRequired="true">
      <StringProperty.DataSource>
        <DataSource
          Persistence="ProjectFile"
          ItemType="IDDC"
          SourceType="Item" />
      </StringProperty.DataSource>
    </StringProperty>
    <BoolProperty
      Name="NoLogo"
      HelpUrl="https://github.com/nidud/asmc/"
      DisplayName="Suppress Startup Banner"
      Description="Suppress the display of the startup banner and information messages."
      Switch="/nologo" />
    <BoolProperty
      Name="ObjectFileTypeCOFF"
      Category="Object File"
      HelpUrl="https://github.com/nidud/asmc/"
      DisplayName="Common Object File Format"
      Description="Specifies the type of the output object file."
      Switch="/coff" />
    <BoolProperty
      Name="ObjectFileTypeOMF"
      Category="Object File"
      HelpUrl="https://github.com/nidud/asmc/"
      DisplayName="Object Module Format"
      Description="Specifies the type of the output object file."
      Switch="/omf" />
    <BoolProperty
      Name="TreatWarningsAsErrors"
      HelpUrl="https://github.com/nidud/asmc/"
      DisplayName="Treat Warnings As Errors"
      Description="Returns an error code if warnings are generated."
      Switch="/WX" />
    <StringProperty
      Name="ObjectFileName"
      Category="Object File"
      HelpUrl="https://github.com/nidud/asmc/"
      DisplayName="Object File Name"
      Description="Specifies the name of the output object file."
      Switch="/Fo &quot;[value]&quot;" />
    <EnumProperty
      Name="PreserveIdentifierCase"
      HelpUrl="https://github.com/nidud/asmc/"
      DisplayName="Preserve Identifier Case"
      Description="Specifies preservation of case of user identifiers.">
      <EnumValue
        Name="0"
        DisplayName="Default" />
      <EnumValue
        Name="1"
        DisplayName="Preserves Identifier Case"
        Switch="/Cp" />
      <EnumValue
        Name="2"
        DisplayName="Maps all identifiers to upper case."
        Switch="/Cu" />
      <EnumValue
        Name="3"
        DisplayName="Preserves case in public and extern symbols."
        Switch="/Cx" />
    </EnumProperty>
    <EnumProperty
      Name="WarningLevel"
      HelpUrl="https://github.com/nidud/asmc/"
      DisplayName="Warning Level"
      Description="Sets the warning level, where level = 0, 1, 2, or 3.">
      <EnumValue
        Name="0"
        DisplayName="Warning Level 0"
        Switch="/W0" />
      <EnumValue
        Name="1"
        DisplayName="Warning Level 1"
        Switch="/W1" />
      <EnumValue
        Name="2"
        DisplayName="Warning Level 2"
        Switch="/W2" />
      <EnumValue
        Name="3"
        DisplayName="Warning Level 3"
        Switch="/W3" />
    </EnumProperty>
    <EnumProperty
      Name="CallingConvention"
      Category="Advanced"
      HelpUrl="https://github.com/nidud/asmc/"
      DisplayName="Calling Convention"
      Description="Selects calling convention for your application.">
      <EnumValue
        Name="0"
        DisplayName="Default" />
      <EnumValue
        Name="c"
        DisplayName="Use C Calling Convention"
        Switch="/Gd" />
      <EnumValue
        Name="stdcall"
        DisplayName="Use STDCALL Calling Convention"
        Switch="/Gz" />
      <EnumValue
        Name="pascal"
        DisplayName="Use PASCAL Calling Convention"
        Switch="/Gc" />
      <EnumValue
        Name="vectorcall"
        DisplayName="Use VECTORCALL Calling Convention"
        Switch="/Gv" />
      <EnumValue
        Name="syscall"
        DisplayName="Use SYSCALL Calling Convention"
        Switch="/Gs" />
    </EnumProperty>
    <EnumProperty
      Name="MemoryModel"
      Category="Advanced"
      HelpUrl="https://github.com/nidud/asmc/"
      DisplayName="Memory Model"
      Description="Specifies the memory model of the output object file.">
      <EnumValue
        Name="0"
        DisplayName="Default" />
      <EnumValue
        Name="compact"
        DisplayName="Model Compact 16-bit"
        Switch="/mc" />
      <EnumValue
        Name="large"
        DisplayName="Model Large 16-bit"
        Switch="/ml" />
      <EnumValue
        Name="flat"
        DisplayName="Model Flat 32-bit"
        Switch="/mf" />
      <EnumValue
        Name="win64"
        DisplayName="Model Flat 64-bit"
        Switch="/win64" />
    </EnumProperty>
    <StringProperty
      Name="CommandLineTemplate"
      DisplayName="Command Line"
      Visible="False"
      IncludeInCommandLine="False" />
    <DynamicEnumProperty
     Name="IDDCBeforeTargets"
     Category="General"
     EnumProvider="Targets"
     IncludeInCommandLine="False">
      <DynamicEnumProperty.DisplayName>
        <sys:String>Execute Before</sys:String>
      </DynamicEnumProperty.DisplayName>
      <DynamicEnumProperty.Description>
        <sys:String>Specifies the targets for the build customization to run before.</sys:String>
      </DynamicEnumProperty.Description>
      <DynamicEnumProperty.ProviderSettings>
        <NameValuePair
          Name="Exclude"
          Value="^IDDCBeforeTargets|^Compute" />
      </DynamicEnumProperty.ProviderSettings>
      <DynamicEnumProperty.DataSource>
        <DataSource
          Persistence="ProjectFile"
          ItemType=""
          HasConfigurationCondition="true" />
      </DynamicEnumProperty.DataSource>
    </DynamicEnumProperty>
    <DynamicEnumProperty
      Name="IDDCAfterTargets"
      Category="General"
      EnumProvider="Targets"
      IncludeInCommandLine="False">
      <DynamicEnumProperty.DisplayName>
        <sys:String>Execute After</sys:String>
      </DynamicEnumProperty.DisplayName>
      <DynamicEnumProperty.Description>
        <sys:String>Specifies the targets for the build customization to run after.</sys:String>
      </DynamicEnumProperty.Description>
      <DynamicEnumProperty.ProviderSettings>
        <NameValuePair
          Name="Exclude"
          Value="^IDDCAfterTargets|^Compute" />
      </DynamicEnumProperty.ProviderSettings>
      <DynamicEnumProperty.DataSource>
        <DataSource
          Persistence="ProjectFile"
          ItemType=""
          HasConfigurationCondition="true" />
      </DynamicEnumProperty.DataSource>
    </DynamicEnumProperty>
    <StringProperty
      Name="ExecutionDescription"
      DisplayName="Execution Description"
      IncludeInCommandLine="False"
      Visible="False" />
    <StringListProperty
      Name="AdditionalDependencies"
      DisplayName="Additional Dependencies"
      IncludeInCommandLine="False"
      Visible="False" />
    <StringProperty
      Subtype="AdditionalOptions"
      Name="AdditionalOptions"
      Category="Command Line">
      <StringProperty.DisplayName>
        <sys:String>Additional Options</sys:String>
      </StringProperty.DisplayName>
      <StringProperty.Description>
        <sys:String>Additional Options</sys:String>
      </StringProperty.Description>
    </StringProperty>
  </Rule>
  <ItemType
    Name="IDDC"
    DisplayName="Asmc Binary Resource Compiler" />
  <FileExtension
    Name="*.idd"
    ContentType="IDDC" />
  <ContentType
    Name="IDDC"
    DisplayName="Asmc Binary Resource Compiler"
    ItemType="IDDC" />
</ProjectSchemaDefinitions>
